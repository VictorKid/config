{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["grabkit.yml", "doc.go"],
      "filetypes": ["go"],
      "disableWorkspaceFolders": true,
      "initializationOptions": {
        "usePlaceholders": true,
        "completeUnimported": true,
        "expandWorkspaceToModule": false
      }
    }
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "scss",
    "sass",
    "markdown",
    "json",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ]
}
